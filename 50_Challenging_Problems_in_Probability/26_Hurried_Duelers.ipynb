   "outputs": [],
   "source": [
    "import numpy as np"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Probability of them meeting: 0.160\n"
     ]
    }
   ],
   "source": [
    "n_simulations = 1000000\n",
    "arrival_times = 60*np.random.random(size=(n_simulations, 2))\n",
    "time_diff = np.abs(np.diff(arrival_times))\n",
    "\n",
    "print(f\"Probability of them meeting: {np.mean(time_diff <= 5):.3f}\")"
   ]
  }
